@model Site_v3_dinamico.Models.Exp_Profissional

@{
    ViewData["Title"] = "Delete";
}

<section class="section my-services" data-section="section5">
    <div class="container">
        <div class="section-heading">
            <h2>Remover cargo/função</h2>
            <div class="line-dec"></div>
            <h3 style="color: white;">Tem a certeza de que pretende remover este cargo/função?</h3>
        </div>
        <div class="table-responsive">
            <table class="table table-dark">
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.nomeEmpresa)
                    </td>
                    <td>
                        De: @Html.DisplayFor(model => model.dataInicio)
                        <hr />
                        Até: @Html.DisplayFor(model => model.dataFim)
                    </td>
                    <td>
                        <h3 style="color:#ff006a">
                            @Html.DisplayFor(model => model.funcao)
                        </h3>
                        <ul class="profissional">
                            @Html.DisplayFor(model => model.descricaoFuncao)
                        </ul>
                    </td>

                </tr>
                }

            </table>

        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Exp_ProfissionalId" />
            <input type="submit" value="Apagar" class="btn btn-danger" /> |
            <a class="btn btn-primary" asp-action="Index">Cancelar</a>
        </form>
    </div>
    </section>
