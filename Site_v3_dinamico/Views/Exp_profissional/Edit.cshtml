@model Site_v3_dinamico.Models.Exp_Profissional

@{
    ViewData["Title"] = "Edit";
}

<section class="section my-services" data-section="section5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form style="color: white;" asp-action="Edit" enctype="multipart/form-data">
                    <div class="section-heading">
                        <h2>Editar cargo/função</h2>
                        <div class="line-dec"></div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Exp_ProfissionalId" />
                    <div class="form-group">
                        <label asp-for="nomeEmpresa" class="control-label"></label>
                        <input asp-for="nomeEmpresa" class="form-control" />
                        <span asp-validation-for="nomeEmpresa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="ficheiroLogotipo" class="control-label">Logótipo da empresa (especifique apenas caso queira alterar)</label>
                        <input name="ficheiroLogotipo" class="form-control-file" type="file" />
                    </div>
                    <div class="form-group">
                        <label asp-for="dataInicio" class="control-label"></label>
                        <input asp-for="dataInicio" class="form-control" />
                        <span asp-validation-for="dataInicio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="dataFim" class="control-label"></label>
                        <input asp-for="dataFim" class="form-control" />
                        <span asp-validation-for="dataFim" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="funcao" class="control-label"></label>
                        <input asp-for="funcao" class="form-control" />
                        <span asp-validation-for="funcao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1" asp-for="descricaoFuncao" class="control-label">Conteúdos Programáticos</label>
                        <textarea asp-for="descricaoFuncao" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>

                        <span asp-validation-for="descricaoFuncao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input asp-for="logotipo" type="hidden" />
                        <input type="submit" value="Guardar" class="btn btn-primary" /> |
                        <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
