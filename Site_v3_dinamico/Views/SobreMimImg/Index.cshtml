@model IEnumerable<Site_v3_dinamico.Models.SobreMimImg>

@{
    ViewData["Title"] = "Index";
}

<section class="section about-me" data-section="section1">
    <div class="container">
        <div class="section-heading">
            <h2>Sobre Mim</h2>
            <div class="line-dec"></div>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.imagem)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @if (item.imagem != null)
                                {
                                    <img src="data:image/jpeg;base64, @Convert.ToBase64String(item.imagem)" class="img-fluid" />
                                }
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.SobreMimImgId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.SobreMimImgId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.SobreMimImgId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            </div>
        </div>
    </section>
