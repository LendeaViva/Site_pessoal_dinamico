@model Site_v3_dinamico.Models.SobreMimImg

@{
    ViewData["Title"] = "Create";
}

<section class="section my-services" data-section="section5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="section-heading">
                    <h2>Adicionar imagem</h2>
                    <div class="line-dec"></div>
                </div>
                <form style="color: white;" asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="ficheiroImagem" class="control-label">Imagem</label>
                        <input name="ficheiroImagem" class="form-control-file" type="file" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />Adicionar imagem
                    </div>

                </form>
            </div>
        </div>

    </div>
</section>
