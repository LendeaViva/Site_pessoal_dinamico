@model Site_v3_dinamico.Models.SobreMimImg

@{
    ViewData["Title"] = "Edit";
}

<section class="section my-services" data-section="section5">
    <div class="container">

        <div class="row">
            <div class="col-md-6">
                <form style="color: white;" asp-action="Edit" enctype="multipart/form-data">
                    <div class="section-heading">
                        <h2>Editar imagem</h2>
                        <div class="line-dec"></div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="SobreMimImgId" />
                    <div class="form-group">
                        <label for="ficheiroImagem" class="control-label">Imagem</label>
                        <input name="ficheiroImagem" class="form-control-file" type="file" />
                    </div>
                    <div class="form-group">
                        <input asp-for="imagem" type="hidden" />
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
</div>
</section>