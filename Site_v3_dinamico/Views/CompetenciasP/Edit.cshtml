@model Site_v3_dinamico.Models.CompetenciasP

@{
    ViewData["Title"] = "Edit";
}

<section class="section my-services" data-section="section5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form style="color: white;" asp-action="Edit">
                    <div class="section-heading">
                        <h2>Editar competência pessoal</h2>
                        <div class="line-dec"></div>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="CompetenciasPId" />
                    <div class="form-group">
                        <label asp-for="nomeComp" class="control-label"></label>
                        <input asp-for="nomeComp" class="form-control" />
                        <span asp-validation-for="nomeComp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="descricaoComp" class="control-label"></label>
                        <input asp-for="descricaoComp" class="form-control" />
                        <span asp-validation-for="descricaoComp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Guardar" class="btn btn-primary" /> |
                        <a class="btn btn-danger" asp-area="" asp-controller="Competencias" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>
