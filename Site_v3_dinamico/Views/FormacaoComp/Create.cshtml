@model Site_v3_dinamico.Models.FormacaoComp

@{
    ViewData["Title"] = "Create";
}

<section class="section my-services" data-section="section5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form style="color: white;" asp-action="Create" enctype="multipart/form-data">
                    <div class="section-heading">
                        <h2>Adicionar formação complementar</h2>
                        <div class="line-dec"></div>
                    </div>
                    <div class="form-group">
                        <label asp-for="nomeCursoComp" class="control-label"></label>
                        <input asp-for="nomeCursoComp" class="form-control" />
                        <span asp-validation-for="nomeCursoComp" class="text-danger"></span>
                    </div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="nomeInstituicaoComp" class="control-label"></label>
                        <input asp-for="nomeInstituicaoComp" class="form-control" />
                        <span asp-validation-for="nomeInstituicaoComp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="dataIniciodataFimComp" class="control-label"></label>
                        <input asp-for="dataIniciodataFimComp" class="form-control" />
                        <span asp-validation-for="dataIniciodataFimComp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Adicionar" class="btn btn-primary" /> |
                        <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
