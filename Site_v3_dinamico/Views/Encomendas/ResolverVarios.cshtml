@model IEnumerable<Site_v3_dinamico.Models.Encomenda>

@{
    ViewData["Title"] = "Index";
}

<body>
    <div class="section my-services" data-section="section5">
        <div class="container">
            <div class="section-heading">
                <h2>Marcar encomendas como concluídas</h2>
                <div class="line-dec"></div>

            </div>
            <form style="color: white;" asp-action="Edit">
                <div class="table-responsive">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.dataEncomenda)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cliente)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Servicos)
                                </th>

                                <th>
                                    Resolvido
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.dataEncomenda)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cliente.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Servicos.Nome)
                                </td>
                                <td>

                                    <div class="form-group form-check">
                                        <label class="form-check-label">
                                            <input class="form-check-input" asp-for="@Html,(modelItem => item.respondido)" /> Resolvido)
                                        </label>
                                    </div>
                                </td>
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                            </tr>
                            }
                           
                        </tbody>
                        </table>
                    </div>
                </form>
        </div>
    </div>
</body>


