@model Site_v3_dinamico.Models.Encomenda

@{
    ViewData["Title"] = "Edit";
}

<section class="section my-services" data-section="section5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form style="color: white;" asp-action="Edit" enctype="multipart/form-data">
                    <div class="section-heading">
                        <h2>Marcar como resolvido</h2>
                        <div class="line-dec"></div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.dataEncomenda)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cliente)
                                    </th>
                                    <th>
                                        Tipo de serviço
                                    </th>
                                    <th>
                                        Resolvido
                                    </th>
                                    @*<th>
                            @Html.DisplayNameFor(model => model.respondido)
                        </th>*@
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.dataEncomenda)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Cliente.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Servicos.Nome)
                                    <td>
                                        <div class="form-group form-check">
                                            <label class="form-check-label">
                                                <input class="form-check-input" asp-for="respondido" /> Resolvido)
                                            </label>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <input type="submit" value="Guardar" class="btn btn-primary" />
                        <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>     
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
