@model Site_v3_dinamico.Models.Encomenda

@{
    ViewData["Title"] = "Edit";
}

<section class="section my-services" data-section="section5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                
                    <div class="section-heading">
                        <h2>Marcar como resolvido</h2>
                        <div class="line-dec"></div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-dark">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.dataEncomenda)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Cliente)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Servicos)
                                    </th>
                                   
                                    @*<th>
                        @Html.DisplayNameFor(model => model.respondido)
                    </th>*@
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        @Html.DisplayFor(model => model.dataEncomenda)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Cliente.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.Servicos.Nome)
                                
                                    <td>
                            </tbody>
                        </table>
                    </div>
                    <form style="color: white;" asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="EncomendaId" />
                        <div class="form-group">
                            @*<label asp-for="dataEncomenda" class="control-label"></label>*@
                            <input type="hidden" asp-for="dataEncomenda" class="form-control" />
                            <span asp-validation-for="dataEncomenda" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @*<label asp-for="detalhes" class="control-label"></label>*@
                            <input type="hidden" asp-for="detalhes" class="form-control" />
                            <span asp-validation-for="detalhes" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" id="flexCheckDefault"asp-for="respondido" /> Marcar como resolvido
                            </label>
                        </div>
                        <div class="form-group">
                            @*<label asp-for="ClienteId" class="control-label"></label>*@
                            <input type="hidden" asp-for="ClienteId" class="form-control" asp-items="ViewBag.ClienteId"></>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            @*<label asp-for="ServicosId" class="control-label"></label>*@
                            <input type="hidden" asp-for="ServicosId" class="form-control" asp-items="ViewBag.ServicosId"></>
                            <span asp-validation-for="ServicosId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                            <a class="btn btn-danger" asp-action="Index">Cancelar</a>
                        </div>

                    </form>
            </div>
        </div>
    </div>     
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
