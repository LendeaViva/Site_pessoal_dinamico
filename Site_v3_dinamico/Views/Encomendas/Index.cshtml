@model IEnumerable<Site_v3_dinamico.Models.Encomenda>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.dataEncomenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Servicos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.Cliente.Email == User.Identity.Name) //Assegura que cada cliente só vê as suas encomendas
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.dataEncomenda)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Servicos.Nome)
                    </td>
            
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.EncomendaId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.EncomendaId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.EncomendaId">Delete</a>
                    </td>
                </tr>
            }
        }
        </tbody>
</table>
