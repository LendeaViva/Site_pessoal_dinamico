@model IEnumerable<Site_v3_dinamico.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<body>
    <div class="section my-services" data-section="section5">
        <div class="container">
            <div class="section-heading">
                <h2>Lista de clientes registados</h2>
                <div class="line-dec"></div>
            </div>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telemóvel)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telemóvel)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @*<a asp-action="Edit" asp-route-id="@item.ClienteId">Edit</a> |*@
                                    <a class="btn btn-info"asp-action="Details" asp-route-id="@item.ClienteId">Detalhes</a> |
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ClienteId"> Apagar </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</body>