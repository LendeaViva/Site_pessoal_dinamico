@model Site_v3_dinamico.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<body>
    <div class="section my-services" data-section="section5">
        <div class="container">
            <div class="section-heading">
                <h2>Dados de registo</h2>
                <div class="line-dec"></div>
            </div>
            <div class="table-responsive">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Telemóvel)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(model => model.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Telemóvel)
                            </td>
                            <td>
                                @Html.DisplayFor(model => model.Email)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div>
                @if (User.IsInRole("Cliente"))
                {
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.ClienteId">Editar dados pessoais</a>
                    <a class="btn btn-info" asp-area="" asp-controller="Encomendas" asp-action="Index">Ver pedidos realizados</a>

                }
                @if (User.IsInRole("Administradora"))
                {
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.ClienteId"> Apagar </a>
                }

            </div>
            </div>
        </div>
    </body>
