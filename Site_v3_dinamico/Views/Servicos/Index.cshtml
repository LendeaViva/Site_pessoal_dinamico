@model IEnumerable<Site_v3_dinamico.Models.Servicos>

@{
    ViewData["Title"] = "Index";
}

<body>
    <div class="section my-services" data-section="section5">
        <div class="container">
            <div class="section-heading">
                <h2>Loja</h2>
                <div class="line-dec"></div>
            </div>
                    <p>
                        <a asp-action="Create">Create New</a>
                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Nome)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Descricao)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td >
                                    @if (item.imagem != null)
                                    {
                                        <img src="data:image/jpeg;base64, @Convert.ToBase64String(item.imagem)" class="img-fluid" />
                                    }
                   
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ServicosId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.ServicosId">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.ServicosId">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
            </div>
        </div>
    </body>
