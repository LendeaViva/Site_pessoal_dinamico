@model Site_v3_dinamico.Models.Servicos

@{
    ViewData["Title"] = "Delete";
}

<section class="section my-services" data-section="section5">
    <div class="container">
        <div class="section-heading">
            <h2>Remover serviço</h2>
            <div class="line-dec"></div>
            <h3 style="color: white;">Tem a certeza de que pretende remover este serviço?</h3>
        </div>
        <div class="table-responsive">
            <table class="table table-dark">
                
                <tr>

                    <td>
                        @Html.DisplayFor(model => model.Nome)
                    </td>

                    <td>
                        @Html.DisplayFor(model => model.Descricao)
                    </td>
                </tr>
            </table>
            <form asp-action="Delete">
                <input type="hidden" asp-for="ServicosId" />
                <input type="submit" value="Apagar" class="btn btn-danger" /> |
                <a class="btn btn-primary" asp-action="Index">Cancelar</a>
            </form>
        </div>
    </div>
</section>
