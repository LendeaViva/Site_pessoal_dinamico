@model Site_v3_dinamico.Models.CompetenciasF

@{
    ViewData["Title"] = "Edit";
}

<section class="section my-services" data-section="section5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form style="color: white;" asp-action="Edit" enctype="multipart/form-data">
                    <div class="section-heading">
                        <h2>Editar ferramenta</h2>
                        <div class="line-dec"></div>
                    </div>
              
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="CompetenciasFId" />
                        <div class="form-group">
                            <label asp-for="nomeComp" class="control-label"></label>
                            <input asp-for="nomeComp" class="form-control" />
                            <span asp-validation-for="nomeComp" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="nivelComp" class="control-label"></label>
                            <input asp-for="nivelComp" class="form-control" />
                            <span asp-validation-for="nivelComp" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="ficheiroLogo" class="control-label">Logótipo da ferramenta (especifique apenas caso queira alterar)</label>
                            <input name="ficheiroLogo" class="form-control-file" type="file" />
                        </div>
                        <div class="form-group">
                            <input asp-for="logo" type="hidden" />
                            <input type="submit" value="Guardar" class="btn btn-primary" /> |
                            <a class="btn btn-danger" asp-area="" asp-controller="Competencias" asp-action="Index">Cancelar</a>
                        </div>
                    </form>
            </div>
        </div>

    </div>
</section>

